@page
@model MintPsyBlog.Pages.Blogs.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
@{
    var reversedBlogs = Model.Blog.Reverse().ToList();
}

<h1>
    
        @reversedBlogs.Count()
    
</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Blog[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Blog[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Blog[0].ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Blog[0].Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Blog[0].Image)
            </th>
            <th></th>
        </tr>
    </thead>
  
    <tbody>
        @foreach (var item in reversedBlogs)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td>
                    <img class="max-w-none w-52 h-52" src="@Url.Content(item.Image)" alt="Description" />
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
